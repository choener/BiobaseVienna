    primitive         >= 0.5     ,
    vector            >= 0.10    ,
    BiobaseTurner     >= 0.3.0.0 ,
    BiobaseXNA        >= 0.7     ,
    PrimitiveArray    >= 0.5
  exposed-modules:
    Biobase.Vienna
--    Biobase.Vienna.Default
--    Biobase.Vienna.Export
--    Biobase.Vienna.Import
